<h1>
  <%= @article.title %>
</h1>
<h4>
  <%= @article.body %>
</h4>
<p>
  Tags:
  <% @article.tags.each do |tag| %>
  <a href="/articles?tag=<%=tag.id%>"><%=tag.name%></a>
    <!-- <%= link_to tag.name, { controller: "articles" }, tag: tag.id %> -->
  <% end %>
</p>
<h3>Comments</h3>
<%= render partial: 'articles/comment', collection: @article.comments %>
<%= render partial: 'comments/form' %>
