<!DOCTYPE html>
<html>
  <head>
    <title>BootstrapBlogSeriesTodoApp</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <%= render 'shared/navigation' %>

    <div id="main-container" class="container">
      <div class="row">
        <div class="col-xs-12">
        </div>
      </div>
      <div class="row">
        <div class="col-xs-3">
          <!-- <h2>Tealeaf Academy Todo</h2> -->
          <h2>  <%= link_to 'New Article', new_article_path %></h2>
        </div>
        <div class="col-xs-9">
          <%= render 'shared/tabs' %>
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
